body {
    margin: 60px auto;
    width: 70%;
    font-family: Helvetica, Arial, sans-serif;
    font-size: 10px;
}
a {
    text-decoration: none;
    color: #999999;
}
a:hover {
    text-decoration: underline;
}
h1 {
    font-size: 2.4em;
    margin: 0 0 2em 0;
}
h2 {
  font-size: 1.8em;
  margin: 10px 0px 0px 0px;
}
p {
    font-size: 2.4em;
    line-height: 2.2em;
    color: #999999;
}
nav ul, footer ul {
    padding: 0em;
    list-style: none;
    font-weight: bold;
    margin: 0; 
    padding: 0;
}
nav ul li, footer ul li {
    display: inline;
    margin: 0; 
    padding: 0;
}
ul.posts {  
    font-size: 1.6em;
    margin: 0 0 1.5em 0; 
    padding: 0;
}
ul.posts li {
    list-style: none;
    margin: 0; 
    padding: 0;
}
footer {
    padding: .5em 0 0 0;
    margin: 7em 0 0 0;
    border-top: .1em solid #d5d5d5;
    font-size: 1.4em;
}